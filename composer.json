{
	"name": "kraken/kraken",
	"description": "KrakenCRM. Lightweight contact management.",
	"keywords": ["crm", "kraken"],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "4.3.*",
        	"laracasts/commander": "~1.0",
        	"laracasts/presenter": "0.1.*"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
        	"way/generators": "~3.0",
        	"phpspec/phpspec": "~2.0"
	},
	"autoload": {
		"classmap": [
			"database",
			"tests/TestCase.php"
		],
		"psr-4": {
			"Kraken\\": "src/"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
